@model EntityLayer.Concrete.Writer
@{
    ViewBag.Title = "AddWriter";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<br />

    <div class="container">
        <div class="row d-flex justify-content-around">
            <div role="form" class="col-md-6 was-validated">
                @using (Html.BeginForm("AddWriter", "AdminWriter", FormMethod.Post))
                {<br />
                 <div class="form-group">

                 
                    @Html.Label("Yazar Adı" );
                    @Html.TextBoxFor(w => w.WriterName, new { @class = "form-control",@required="", @minlength="3" })
                    @Html.ValidationMessageFor(w => w.WriterName, null, new { @class = "text-danger" })
                </div>   
                <br />
                    @Html.Label("Yazar Soyadı");
                    @Html.TextBoxFor(w => w.WriterSurname, new { @class = "form-control" })
                    @Html.ValidationMessageFor(w => w.WriterSurname,"", new { @class = "text-danger" })
                    <br />
                    @Html.Label("Yazar Hakkında");
                    @Html.TextBoxFor(w => w.WriterAbout, new { @class = "form-control" })
                    @Html.ValidationMessageFor(w => w.WriterAbout, "", new { @class = "text-danger" })
                    <br />
                    <br />
                    @Html.Label("Yazar Ünvanı");
                    @Html.TextBoxFor(w => w.WriterTitle, new { @class = "form-control" })
                    @Html.ValidationMessageFor(w => w.WriterTitle, "", new { @class = "text-danger" })
                    <br />
                    @Html.Label("Yazar Email");
                    @Html.TextBoxFor(w => w.WriterMail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(w => w.WriterMail)
                    <br />
                    @Html.Label("Yazar Şifresi");
                    @Html.TextBoxFor(w => w.WritePassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(w => w.WritePassword)
                    <br />
                    @Html.Label("Yazar Görsel Link");
                    @Html.TextBoxFor(w => w.WriterImage, new { @class = "form-control" })
                    @Html.ValidationMessageFor(w => w.WriterImage)
                    <br />


                    <button style="margin-bottom:10px" class="btn btn-info">Yazarı Ekle</button>
                }

            </div>
        </div>
    </div>

