@model EntityLayer.Concrete.Message
@{
    ViewBag.Title = "GetInboxMessageDetaiLs";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <div class="container-fluid">



        <div class="content">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Detay</h1>
                        </div>

                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">

                <div class="row">

                    @Html.Action("MessageListMenu", "WriterPanelMessage")
                    <!-- /.col -->
                    <div class="col-md-9">
                        <div class="card card-primary card-outline">
                            <div class="card-header">


                                <div class="card-tools">
                                    <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Previous"><i class="fas fa-chevron-left"></i></a>
                                    <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Next"><i class="fas fa-chevron-right"></i></a>
                                </div>
                            </div>
                            <!-- /.card-header -->


                            <div class="card-body p-0">
                                <div class="mailbox-read-info">
                                    <h5>@Html.DisplayFor(c => c.Subject)</h5>
                                    <br />
                                    <h6>
                                        Gönderen : @Html.DisplayFor(c => c.SenderMail)
                                        <span class="mailbox-read-time float-right">
                                            @(((DateTime)Model.MessageDate).ToString("dd-MMMMM-yyyy"))
                                        </span>
                                    </h6>
                                </div>


                                <div class="mailbox-read-message">
                                    <p>@Html.DisplayFor(c => c.MessageContent)</p>

                                </div>
                                <!-- /.mailbox-read-message -->
                            </div>
                            <!-- /.card-body -->
                            <!-- /.card-footer -->
                            <div class="card-footer">
                                <div class="float-right">
                                    <button type="button" class="btn btn-default"><i class="fas fa-reply"></i> Reply</button>
                                    <button type="button" class="btn btn-default"><i class="fas fa-share"></i> Forward</button>
                                </div>
                                <button type="button" class="btn btn-default"><i class="far fa-trash-alt"></i> Delete</button>
                                <button type="button" class="btn btn-default"><i class="fas fa-print"></i> Print</button>
                            </div>
                            <!-- /.card-footer -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </section>
            <!-- /.content -->
        </div>


    </div>

</body>
</html>

