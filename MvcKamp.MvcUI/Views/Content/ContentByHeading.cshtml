@using EntityLayer.Concrete
@model List<Content>
@{
    ViewBag.Title = "ContentByHeading";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
@{
    DateTime bDate;
    DateTime eDate;
    TimeSpan result = new TimeSpan();
 }


<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">




        <header class="content-header" style="margin-top:10px">
            <div class="container-fluid ">
                <div class="row mb-2 justify-content-around">
                    <div class="col-sm-6">
                        <h1 class="text-center">Başlık Gelecek</h1>
                    </div>

                </div>
            </div><!-- /.container-fluid -->
        </header>
        <div class="container-fluid">
            <div class="row justify-content-around">

                <!-- /.col -->
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills">

                                <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Timeline</a></li>

                            </ul>
                        </div><!-- /.card-header -->
                        <!-- /.tab-pane -->
                        <div class="tab-pane" id="timeline">
                            <!-- The timeline -->
                            <div class="timeline timeline-inverse">
                                <!-- timeline time label -->
                                @foreach (var item in Model)
                                {
                                    bDate = Convert.ToDateTime(@item.ContentDate.ToString("dd-MM-yyy"));
                                    eDate = Convert.ToDateTime(DateTime.Now.ToString("dd-MM-yyy"));
                                    result = eDate - bDate;

                                    <div class="time-label">
                                        <span class="bg-danger">
                                            @(((DateTime)item.ContentDate).ToString("dd-MMMM-yyyy"))
                                        </span>
                                    </div>
                                    <!-- timeline item -->

                                    <div>
                                        <i class="fas fa-comments bg-warning"></i>

                                        <div class="timeline-item">
                                            <span class="time">
                                                <i class="far fa-clock"></i>
                                                
                                                @result.TotalDays Gün Önce
                                            </span>

                                            <h3 class="timeline-header"><a href="#">@item.Writer.WriterName  @item.Writer.WriterSurname</a> sizler için paylaştığı içerikte</h3>

                                            <div class="timeline-body">
                                                @item.ContentValue
                                            </div>
                                            <div class="timeline-footer">
                                                <a href="/Heading/Index" class="btn btn-warning btn-flat btn-sm">Geri Dön</a>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- END timeline item -->
                                }


                            </div>
                        </div>
                        <!-- /.tab-pane -->
                        <!-- /.tab-pane -->
                    </div>
                    <!-- /.tab-content -->
                </div><!-- /.card-body -->
            </div>
            <!-- /.nav-tabs-custom -->
        </div>
</body>
</html>

