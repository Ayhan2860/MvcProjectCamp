@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori</th>
            <th>Açıklama</th>
          
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Başlıklar</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <th>@item.Id</th>
            <td>@item.CategoryName</td>
            <td>@item.CategoryDescription</td>
           
            <td><a href="/AdminCategory/Delete/@item.Id" class="btn btn-danger"> <i class="fas fa-trash-alt"></i> </a> </td>
            <td><a href="/AdminCategory/EditCategory/@item.Id" class="btn btn-warning"> <i class="fas fa-edit"></i> </a> </td>
            <td><a href="#" class="btn btn-primary"> Başlıklar </a> </td>
        </tr>
        }


    </tbody>
</table>
<br />
<a href="/AdminCategory/AddCategory" class="btn btn-info">Yeni Kategori </a>

