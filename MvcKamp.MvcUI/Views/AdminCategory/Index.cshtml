@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@{ 
    string statusResult = "";
    string iTag = "";
    string trueFalseColor = "";
 }

<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori</th>
            <th>Açıklama</th>


            <th>Başlıklar</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            if (item.CategoryStatus == false)
            {
                statusResult = "Aktif Yap";
                iTag = "fas fa-bolt";
                trueFalseColor = "btn btn-info";

            }
            else
            {
                statusResult = "Pasif Yap";
                iTag = "fas fa-exclamation-triangle";
                trueFalseColor = "btn btn-danger";
            }
            <tr>
                <th>@item.Id</th>
                <td>@item.CategoryName</td>
                <td>@item.CategoryDescription</td>
                <td><a href="/Heading/GetByCategoryId/@item.Id" class="btn btn-primary"> Başlıklar </a> </td>
                <td><a href="/AdminCategory/EditCategory/@item.Id" class="btn btn-warning"> <i class="fas fa-edit"></i> </a> </td>
                <td><a href="/AdminCategory/Delete/@item.Id" class="@trueFalseColor" title="@statusResult" id="deleteBtn"> <i class="@iTag"></i> @statusResult</a> </td>
               

            </tr>
        }


    </tbody>
</table>
<a href="/AdminCategory/AddCategory" class="btn btn-info">Yeni Kategori </a>

